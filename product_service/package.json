{
  "name": "product_service",
  "version": "0.1.0",
  "bin": {
    "product_service": "bin/product_service.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --verbose --trace",
    "dev": "cdk synth && sam local start-api -t cdk.out/ProductServiceStack.template.json",
    "dev:container": "sam local start-api --host 0.0.0.0 -t cdk.out/ProductServiceStack.template.json",
    "watch:container": "npm run watch & sam local start-api --host 0.0.0.0 -t cdk.out/ProductServiceStack.template.json",
    "start": "docker compose up -d",
    "start:foreground": "docker compose up",
    "stop": "docker compose down",
    "restart": "docker compose down && docker compose up -d",
    "docker:build": "docker compose up --build -d",
    "docker:logs": "docker compose logs -f app",
    "docker:rebuild": "docker compose down && docker compose up --build -d"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1030.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.658.0",
    "@middy/core": "^6.4.5",
    "@middy/http-event-normalizer": "^6.4.5",
    "@middy/http-json-body-parser": "^6.4.5",
    "@types/aws-lambda": "^8.10.156",
    "@types/uuid": "^10.0.0",
    "aws-cdk-lib": "2.215.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "constructs": "^10.0.0",
    "mongoose": "^8.19.3",
    "uuid": "^13.0.0"
  },
  "cdkDependencies": {
    "externals": [
      "@aws-sdk/*"
    ]
  },
  "aws:cdk:bundling": {
    "externals": [
      "@aws-sdk/*"
    ]
  }
}
